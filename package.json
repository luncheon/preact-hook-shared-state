{
  "name": "preact-shared-state-hook",
  "version": "0.2.1",
  "description": "Most straightforward way to create shareable state hooks for Preact.",
  "license": "WTFPL",
  "repository": "luncheon/preact-shared-state-hook",
  "keywords": [
    "preact",
    "hook",
    "state"
  ],
  "main": "index.min.js",
  "types": "index.d.ts",
  "prettier": {
    "printWidth": 140,
    "endOfLine": "lf",
    "singleQuote": true,
    "trailingComma": "all",
    "semi": false,
    "arrowParens": "avoid"
  },
  "scripts": {
    "build": "terser -c -m --toplevel -o index.min.js index.js && npm t && gzip-size index.min.js",
    "test": "tsc -p . && esbuild --bundle --jsx-factory=h --external:assert --external:jsdom --outfile=test.bundle.js test.tsx && node test.bundle.js"
  },
  "peerDependencies": {
    "preact": "*"
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.8",
    "@types/jsdom": "^16.2.10",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^3.1.0",
    "esbuild": "^0.11.14",
    "gzip-size-cli": "^4.0.0",
    "jsdom": "^16.5.3",
    "preact": "^10.5.13",
    "terser": "5.3.2",
    "typescript": "^4.2.4"
  }
}
