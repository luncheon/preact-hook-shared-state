{
  "name": "preact-shared-state-hook",
  "version": "0.2.0",
  "description": "Most straightforward way to create shareable state hooks for Preact.",
  "license": "WTFPL",
  "repository": "luncheon/preact-shared-state-hook",
  "keywords": [
    "preact",
    "hook",
    "state"
  ],
  "main": "index.min.js",
  "types": "index.d.ts",
  "prettier": {
    "printWidth": 140,
    "endOfLine": "lf",
    "singleQuote": true,
    "trailingComma": "all",
    "semi": false,
    "arrowParens": "avoid"
  },
  "scripts": {
    "build": "terser -c -m --toplevel -o index.min.js index.js && npm t && gzip-size index.min.js",
    "test": "esbuild --bundle --platform=node --jsx-factory=h --external:jsdom --outfile=test.bundle.js test.tsx && node test.bundle.js"
  },
  "peerDependencies": {
    "preact": "*"
  },
  "devDependencies": {
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^2.2.3",
    "esbuild": "^0.7.19",
    "gzip-size-cli": "^3.0.0",
    "jsdom": "^16.4.0",
    "preact": "^10.5.5",
    "terser": "5.3.2"
  }
}
